extends layout

block body

  section.login
  
    form.login__form(action="/login" method="POST")

      .form__item
        label.form__label(for="email") Email
        input.login__input(name="email" id="email" type="email" required)

      .form__item
        label.form__label(for="password") Password
        input.login__input(name="password" id="password" type="password")

      input.login__input.login__button(type="submit" value="Submit")

      a.form__link(href="/register") Sign Up

      include partials/_messages